ListingBlockStartDelimiter <- "----" Space* EOL

ListingBlockEndDelimiter <- ("----" Space* EOL) / EOF

ListingBlock <- attributes:(Attributes)? ListingBlockStartDelimiter content:(ListingBlockVerbatimContent) ListingBlockEndDelimiter {
